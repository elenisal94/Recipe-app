<% layout ('layouts/boilerplate') %>
    <div class="mb-3 pb-3">
        <h1>Settings</h1>
    </div>
    <form id="preferencesForm" action="/settings/<%= currentUser._id %>" method="POST" novalidate
        class="validated-form">
        <div class="mt-3 col-9 col-sm-6 col-md-4 col-xl-3">
            <p>Preferred measuring system:</p>
            <select class="form-select" id="preferredSystem" name="measurementSystem">
                <option value="metric" <%=user.measurementSystem==='metric' ? 'selected' : '' %>>Metric</option>
                <option value="imperial" <%=user.measurementSystem==='imperial' ? 'selected' : '' %>>Imperial</option>
            </select>
            <button id="submitButton" class="btn btn-success mt-3" type="submit">Update
                settings</button>
        </div>
    </form>